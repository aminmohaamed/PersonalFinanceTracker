@model PersonalFinanceTracker.ViewModels.BudgetViewModel
@{
    ViewBag.Title = "Create Budget";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-plus-circle"></i> Create New Budget
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Create", "Budget", FormMethod.Post, new { @class = "budget-form" }))
                {
                    @Html.AntiForgeryToken()
                    
                    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

                    <div class="mb-3">
                        <label for="CategoryId" class="form-label">Category <span class="text-danger">*</span></label>
                        @Html.DropDownListFor(m => m.CategoryId,
                            new SelectList(Model.AvailableCategories, "CategoryId", "Name"),
                            "Select Category",
                            new { @class = "form-select", required = "required" })
                        @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger small" })
                        <small class="text-muted">Select the expense category for this budget</small>
                    </div>

                    <div class="mb-3">
                        <label for="LimitAmount" class="form-label">Monthly Budget Limit <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            @Html.TextBoxFor(m => m.LimitAmount, new { @class = "form-control", type = "number", step = "0.01", min = "0.01", placeholder = "0.00", required = "required" })
                        </div>
                        @Html.ValidationMessageFor(m => m.LimitAmount, "", new { @class = "text-danger small" })
                        <small class="text-muted">Enter the maximum amount you want to spend in this category per month</small>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="Month" class="form-label">Month <span class="text-danger">*</span></label>
                            @Html.DropDownListFor(m => m.Month,
                                new SelectList(Enumerable.Range(1, 12).Select(i => new { 
                                    Value = i, 
                                    Text = System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i) 
                                }), "Value", "Text"),
                                new { @class = "form-select", required = "required" })
                            @Html.ValidationMessageFor(m => m.Month, "", new { @class = "text-danger small" })
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="Year" class="form-label">Year <span class="text-danger">*</span></label>
                            @Html.DropDownListFor(m => m.Year,
                                new SelectList(Enumerable.Range(DateTime.Now.Year - 1, 3).Select(i => new { Value = i, Text = i.ToString() }), "Value", "Text"),
                                new { @class = "form-select", required = "required" })
                            @Html.ValidationMessageFor(m => m.Year, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Tip:</strong> Set realistic budgets based on your spending patterns. You can always adjust them later.
                    </div>

                    <div class="d-flex gap-2 justify-content-end mt-4">
                        <a href="@Url.Action("Index", "Budget")" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Create Budget
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
